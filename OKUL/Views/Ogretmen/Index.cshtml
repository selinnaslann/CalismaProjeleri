@model IEnumerable<OKUL.Models.Ogretmen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.AraAdres = "/Ogretmen/Ara";
}

<h2>Index</h2>
@*<h2>insertedID : @TempData["insertedID"]</h2>*@
<p>
    @Html.ActionLink("Yeni Öğretmen", "Create",new { },new { @class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.ID },new { @class="btn btn-primary"}) |
                @Html.ActionLink("Detay", "Details", new { id = item.ID }, new { @class = "btn btn-secondary" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.ID },new {@class="btn btn-danger",@data_toggle = "modal",@data_target = "#deleteModal" })
            </td>
        </tr>
    }

</table>


<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
